{{#each this}}
<div class="card comment-box">
    <div class="card-body comment-text">
        <p class="card-text card-text-styling">
            {{comment}}
        </p>
        <p class="card-text card-text-styling comment-details">Comment by {{user.name}}, posted on {{format_date date_created}}</p>
    </div>
</div>
{{/each}}